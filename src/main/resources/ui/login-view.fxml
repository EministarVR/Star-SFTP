<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.eministar.starsftp.ui.LoginController"
            prefWidth="960" prefHeight="640" styleClass="root">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <Label text="STAR-SFTP" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="pi" visible="false" prefWidth="22" prefHeight="22"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" alignment="TOP_CENTER">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Profil:"/>
                <ComboBox fx:id="cbProfiles" prefWidth="240"/>
                <Button fx:id="btnDelete" text="Löschen" onAction="#onDelete"/>

            </HBox>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="160"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name"/>
                <TextField fx:id="tfName" GridPane.columnIndex="1"/>

                <Label text="Host" GridPane.rowIndex="1"/>
                <TextField fx:id="tfHost" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Port" GridPane.rowIndex="2"/>
                <TextField fx:id="tfPort" text="22" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Benutzer" GridPane.rowIndex="3"/>
                <TextField fx:id="tfUser" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Passwort" GridPane.rowIndex="4"/>
                <PasswordField fx:id="pfPass" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Private Key" GridPane.rowIndex="5"/>
                <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <TextField fx:id="tfKey" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnPickKey" text="…"
                            onAction="#onPickKey"/>
                </HBox>

                <CheckBox fx:id="chkRemember" text="Geheimnisse merken (verschlüsselt)" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
                    <Button fx:id="btnSave" text="Speichern" onAction="#onSave"/>
                    <Button fx:id="btnConnect" text="Verbinden" onAction="#onConnect" defaultButton="true"/>
                </HBox>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
