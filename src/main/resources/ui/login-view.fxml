<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.feather.Feather?>

<StackPane xmlns="http://javafx.com/javafx/21.0.6"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="dev.eministar.starsftp.ui.LoginController"
           styleClass="root">

    <!-- App -->
    <VBox>

        <!-- Topbar -->
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <Label text="STAR-SFTP" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <TextField fx:id="tfSearch" promptText="Suchen… (Name, Host, User)" prefWidth="260"/>
            <Button fx:id="btnNew" text="Neu">
                <graphic>
                    <FontIcon>
                        <iconCode><Feather fx:constant="PLUS"/></iconCode>
                    </FontIcon>
                </graphic>
            </Button>
            <padding><Insets topRightBottomLeft="10"/></padding>
        </HBox>

        <!-- Content -->
        <BorderPane>

            <!-- Quick Connect -->
            <top>
                <HBox spacing="10" BorderPane.alignment="CENTER">
                    <TextField fx:id="qcHost" promptText="host oder host:port" prefWidth="220"/>
                    <TextField fx:id="qcUser" promptText="user"/>
                    <PasswordField fx:id="qcPass" promptText="passwort"/>
                    <Button fx:id="btnQuickConnect" text="Quick Connect" defaultButton="true">
                        <graphic>
                            <FontIcon>
                                <iconCode><Feather fx:constant="CORNER_DOWN_RIGHT"/></iconCode>
                            </FontIcon>
                        </graphic>
                    </Button>
                    <padding><Insets topRightBottomLeft="10"/></padding>
                </HBox>
            </top>

            <!-- Hosts Grid -->
            <center>
                <ScrollPane fitToWidth="true" styleClass="transparent-scroll">
                    <content>
                        <TilePane fx:id="tile" hgap="14" vgap="14"
                                  prefTileWidth="240" prefTileHeight="140">
                            <!-- Karten werden dynamisch befüllt -->
                            <padding><Insets topRightBottomLeft="14"/></padding>
                        </TilePane>
                    </content>
                    <padding><Insets topRightBottomLeft="14"/></padding>
                </ScrollPane>
            </center>

        </BorderPane>
    </VBox>

    <!-- Connecting Overlay -->
    <StackPane fx:id="overlay" visible="false" opacity="0" styleClass="overlay">
        <VBox spacing="12" alignment="CENTER" styleClass="overlay-card">
            <ProgressIndicator fx:id="pi" prefWidth="64" prefHeight="64"/>
            <Label fx:id="lblConnecting" text="Verbinde…" styleClass="overlay-title"/>
            <Label fx:id="lblConnectingSub" text="" styleClass="overlay-sub"/>
            <Button fx:id="btnCancelConnect" text="Abbrechen" styleClass="secondary"/>
            <padding><Insets topRightBottomLeft="16"/></padding>
        </VBox>
    </StackPane>

</StackPane>
